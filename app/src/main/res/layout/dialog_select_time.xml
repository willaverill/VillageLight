<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent" android:layout_height="150dp"
                  android:layout_marginTop="20dp"
                  android:gravity="center"
                  android:orientation="horizontal">

        <com.weigan.loopview.LoopView
            android:id="@+id/loopView_hour"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:awv_textsize="14"/>

        <com.weigan.loopview.LoopView
            android:id="@+id/loopView_minute"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:awv_textsize="14"/>

        <com.weigan.loopview.LoopView
            android:id="@+id/loopView_apm"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:awv_textsize="14"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9dadb"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_selector_left"
            android:text="Cancel"
            android:textColor="#FF007AFF"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d9dadb"/>

        <Button
            android:id="@+id/btn_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_selector_right"
            android:text="Select"
            android:textColor="#FF007AFF"/>

    </LinearLayout>


</LinearLayout>
