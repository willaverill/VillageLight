<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tutorial_bg"
    android:orientation="vertical"
    tools:context=".activity.FirmwareSwitchUpdateActivity">

    <include layout="@layout/layout_title"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="8dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Switch Firmware\nUpdate Available" android:textColor="@color/white"
                      android:textSize="20sp"
                      android:textStyle="bold"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:text="Please read before proceeding"
                      android:textColor="@color/white"
                      android:textSize="16sp"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="32dp"
                          android:orientation="horizontal">

                <View android:layout_width="2dp" android:layout_height="match_parent"
                      android:background="#5eb309"/>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="14dp"
                              android:orientation="vertical">

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@mipmap/clock_icon"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginTop="8dp"
                              android:text="3 minutes or less"
                              android:textColor="@color/white"
                              android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="32dp"
                          android:orientation="horizontal">

                <View android:layout_width="2dp" android:layout_height="match_parent"
                      android:background="#5eb309"/>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="14dp"
                              android:orientation="vertical">

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@mipmap/phone_icon"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginTop="8dp"
                              android:text="Donâ€™t turn off your phone or allow the screen to lock"
                              android:textColor="@color/white"
                              android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="32dp"
                          android:orientation="horizontal">

                <View android:layout_width="2dp" android:layout_height="match_parent"
                      android:background="#5eb309"/>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="14dp"
                              android:orientation="vertical">

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@mipmap/stay_in_range"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginTop="8dp"
                              android:text="Stay in range of controller"
                              android:textColor="@color/white"
                              android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="32dp"
                          android:orientation="horizontal">

                <View android:layout_width="2dp" android:layout_height="match_parent"
                      android:background="#5eb309"/>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="14dp"
                              android:orientation="vertical">

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@mipmap/plug_icon"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginTop="8dp"
                              android:text="You may be asked to unplug &amp; plug in your switch"
                              android:textColor="@color/white"
                              android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="32dp"
                          android:orientation="horizontal">

                <View android:layout_width="2dp" android:layout_height="match_parent"
                      android:background="#5eb309"/>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginLeft="14dp"
                              android:orientation="vertical">

                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@mipmap/re_pair_switch_icon"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_marginTop="8dp"
                              android:text="You may need to pair again."
                              android:textColor="@color/white"
                              android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>



            <Button android:id="@+id/btn_update_firmware" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="32dp"
                    android:background="@mipmap/btn_enable"
                    android:text="Update Switch Firmware"
                    android:textColor="@color/btn_text_color_enable"
                    android:visibility="visible"
                    tools:visibility="visible"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>